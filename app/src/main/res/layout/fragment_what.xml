<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_project_description"
    android:background="@color/colorBackground"
    tools:context="labpi.convenios.androidapp.ProjectDescription">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Que esclarecimento você precisa?"
        android:id="@+id/clarificationTextView"
        android:layout_marginTop="90dp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_below="@+id/clarificationTextView"
        android:layout_height="80dp"
        android:layout_marginLeft="7dp"
        android:id="@+id/radioGroup">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não sei o porquê dessa proposta"
        android:id="@+id/whyOption"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/provesButton"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/provesButton" />


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não tenho como saber se a proposta foi realizada"
        android:id="@+id/provesButton"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/clarificationTextView"
        android:layout_centerHorizontal="true" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensagem informando assunto do e-mail que será enviado"
        android:id="@+id/alertTextView"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/radioGroup"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Confirmar"
        android:id="@+id/confirmButton"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/alertTextView"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:layout_alignStart="@+id/clarificationTextView"
        android:background="@drawable/button_border"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Cancelar"
        android:id="@+id/cancelButton"
        android:layout_below="@+id/confirmButton"
        android:layout_alignStart="@+id/confirmButton"
        android:layout_alignTop="@id/confirmButton"
        android:layout_marginTop="40dp"
        android:layout_alignEnd="@+id/confirmButton"
        android:background="@drawable/button_border"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>
